<!-- res/drawable/circle_with_outline.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer unfilled circle (stroke only) -->
    <item>
        <shape android:shape="oval">
            <size android:width="56dp" android:height="56dp" />
            <stroke android:width="2dp" android:color="@color/white" />
        </shape>
    </item>

    <!-- Inner filled circle with spacing (inset) -->
    <item android:top="6dp" android:bottom="6dp" android:left="6dp" android:right="6dp">
        <shape android:shape="oval">
            <size android:width="40dp" android:height="40dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>
